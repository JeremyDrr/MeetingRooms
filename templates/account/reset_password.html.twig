{% extends 'base.html.twig' %}

{% block title %}Changement de mot de passe{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-5 my-5 mx-auto">
                    <div class="myform form my-5">
                        <div class="logo mb-3">
                            <div class="col-md-12 text-center">
                                <h1>Changement de mot de passe</h1>

                                {{ form_start(form) }}
                                {% if not form.vars.valid %}
                                    <div class="alert alert-danger">
                                        {% for child in form.children %}
                                            {% for error in child.vars.errors %}
                                                {{ error.message }} <br>
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>


                            <div class="form-group">
                                {{form_label(form.password)}}
                                {{form_widget(form.password)}}
                            </div>

                            <div class="form-group mb-4">
                                {{form_label(form.confirmPassword)}}
                                {{form_widget(form.confirmPassword)}}
                                {{ form_widget(form.token) }}
                            </div>

                            <div class="col-md-12 text-center">
                                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Changer de mot de passe</button>
                            </div>
                            {{ form_end(form) }}
                    </div>
            </div>
        </div>
    </div>
{% endblock %}