{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <div class="row my-5">
            <div class="col-md-4 mx-auto">
                <div id="first">
                    <div class="myform form ">
                        <div class="logo mb-3">
                            <div class="col-md-12 text-center">
                                <h1>Connexion</h1>
                                {% if hasError %}
                                    <div class="alert alert-danger">L'addresse email et/ ou le mot de passe est incorrect</div>
                                {% endif %}
                            </div>
                        </div>
                        <form action="{{ path('account_login') }}" method="post">
                            <div class="form-group">
                                <label for="email">Addresse email</label>
                                <input type="text" name="_username"  class="form-control" id="email" aria-describedby="emailHelp" required placeholder="Entrez votre email" value="{{ username }}">
                            </div>
                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" name="_password" id="password"  class="form-control" aria-describedby="emailHelp" required placeholder="Entrez votre mot de passe">
                            </div>
                            <div class="form-group">
                                <p class="text-center">En vous inscrivant, vous acceptez les <a href="">Conditions Générales d'Utilisation</a></p>
                            </div>
                            <div class="col-md-12 text-center ">
                                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Connexion</button>
                            </div>
                            <div class="form-group">
                                <p class="text-center">Vous n'avez pas de compte? <a href="{{ path('account_register') }}" id="signup">Créer un compte</a></p>
                                <p class="text-center"><a href="{{ path('account_forget_password') }}" id="signup">Mot de passe oublié?</a></p>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}