{% extends 'base.html.twig' %}

{% block title %}Liste des salles de réunion{% endblock %}

{% block body %}

    <div class="container-fluid">

        <h1 class="text-center my-5">Liste des salles de réunion</h1>

        <a href="{{ path('rooms_new') }}"><div class="btn btn-success">
                <i class="fa fa-plus"></i> Ajouter une salle</div></a>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Nombre de sièges</th>
                <th>Vidéoprojecteur</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for room in rooms %}
                <tr>
                    <td>{{ room.id }}</td>
                    <td>{{ room.name }}</td>
                    <td>{{ room.seats }}</td>
                    <td>{{ room.hasProjector }}</td>
                    <td>
                        <a href="{{ path('rooms_edit', {'id':room.id}) }}" class="btn btn-primary">
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a href="{{ path('rooms_delete', {'id':room.id}) }}" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
